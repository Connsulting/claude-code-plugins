{
  "description": "Auto-extract learnings before compaction and session end",
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_TYPE=PreCompact bash ${CLAUDE_PLUGIN_ROOT}/hooks/extract-learnings.sh",
            "timeout": 180000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_TYPE=SessionEnd bash ${CLAUDE_PLUGIN_ROOT}/hooks/extract-learnings.sh",
            "timeout": 180000
          }
        ]
      }
    ]
  }
}
